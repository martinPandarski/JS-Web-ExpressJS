<div class="container">
    <h1 class="my-4">Course title : {{title}}
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{imageUrl}}" alt="{{title}}" />
        </div>

        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{description}}</p>

            {{#if isTheCreator}}
            <a class="btn btn-danger" href="/courses/delete-course/{{_id}}">Delete</a>
            <a class="btn btn-warning" href="/courses/edit-course/{{_id}}">Edit</a>
            {{else}}
            {{#if imAlreadyInTheCourse}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/courses/enroll-course/{{_id}}">Enroll</a>
            {{/if}}
            {{/if}}

        </div>
    </div>
</div>